generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL")
  directUrl         = env("POSTGRES_URL_NON_POOLING")
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id        String   @id @default(cuid())
  name      String   @unique
  password  String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Team {
  id                  String                @id @default(cuid())
  name                String                @unique
  admins              String[]
  collaborators       String[]
  visitors            String[]
  createdAt           DateTime              @default(now()) @map("created_at")
  updatedAt           DateTime              @updatedAt @map("updated_at")
  FundTransacationSet FundTransacationSet[]
}

model FundTransacationSet {
  id               String                    @id @default(cuid())
  fundId           String
  teamId           String
  team             Team                      @relation(fields: [teamId], references: [id])
  status           FundTransacationSetStatus
  FundTransacation FundTransacation[]
}

model FundTransacation {
  id                    String                    @id @default(cuid())
  fundTransacationSetId String
  fundTransacationSet   FundTransacationSet       @relation(fields: [fundTransacationSetId], references: [id])
  date                  DateTime
  direction             FundTransacationDirection
  volume                Float
  commission            Float
}

enum FundTransacationSetStatus {
  HOLDING
  CLEARED
}

enum FundTransacationDirection {
  BUY
  SELL
}
